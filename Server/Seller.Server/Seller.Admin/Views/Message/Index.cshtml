@model IEnumerable<Seller.Admin.Models.Message.MessageResponseModel>

@{
    ViewData["Title"] = "All Messages";
}

<div class="row">
    <div class="col-lg-4">
        <h2>User Messages</h2>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="messages-table" style="width: 10.00%" scope="col">Created</th>
            <th class="messages-table" style="width: 13.00%" scope="col">Sender</th>
            <th class="messages-table" style="width: 16.00%" scope="col">Title</th>
            <th class="messages-table" style="width: 53.00%" scope="col">Created</th>
            <th class="messages-table" style="width: 8.00%" scope="col">Archive</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var message in Model)
    {
        <tr>
            <td class="messages-table">@message.Created</td>
            <td class="messages-table">@message.SenderUsername</td>
            <td class="messages-table">@message.Title</td>
            <td class="messages-table"> @message.Content</td>
            <td class="messages-table">
                <a class="btn btn-primary"
                   asp-area=""
                   asp-controller="Message"
                   asp-action="Process"
                   asp-route-id="@message.Id">
                    Archive
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>

